<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7b6b6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lit.original.Make2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="background" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="rotate" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="pin" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:onClick="save"
                android:text="save"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <EditText
                android:id="@+id/editText"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="100dp"
                android:background="#ffffff"
                android:gravity="top|left" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="256dp"
                android:layout_height="160dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="32dp"
                android:layout_marginTop="64dp"
                android:background="#ffffff"
                android:scrollbarAlwaysDrawHorizontalTrack="false" />

            <LinearLayout
                android:id="@+id/angleLinearLayout"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rectangleblackallradius10"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/angleLinearLayoutIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectanglewhiteallradius10"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rotationEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectanglewhiteallradius10"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/degreeTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="度"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/directionButtonsLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/directionButtonRight"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="右" />

                        <Button
                            android:id="@+id/directionButtonLeft"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="左" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rotateTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/rectanglewhiteallradius10"
                        android:gravity="center"
                        android:text="に傾ける"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
