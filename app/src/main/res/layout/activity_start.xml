<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:hapticFeedbackEnabled="false"
    tools:context="com.example.lit.original.StartActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/motoview">

        <ImageView
            android:id="@+id/makeMoto"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_marginLeft="64dp"
            android:background="@drawable/red" />

        <Button
            android:id="@+id/makeButton"
            android:layout_width="125dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:onClick="make"
            android:text="new make"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/editMoto"
            android:layout_width="212dp"
            android:layout_height="110dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/yellow" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="200dp"
            android:layout_height="116dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="221dp"
            android:layout_marginTop="341dp"
            android:background="@android:color/transparent"
            android:onClick="edit"
            android:text="edit"
            android:textSize="64sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/seeMoto"
            android:layout_width="100dp"
            android:layout_height="215dp"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="445dp"
            android:background="@drawable/green" />

        <Button
            android:id="@+id/seeButton"
            android:layout_width="50dp"
            android:layout_height="175dp"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="460dp"
            android:background="@android:color/transparent"
            android:onClick="see"
            android:text="See"
            android:textColor="@android:color/holo_purple"
            android:textSize="50sp"
            android:textStyle="normal|bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/settingMoto"
            android:layout_width="100dp"
            android:layout_height="280dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/blue" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="400dp"
            android:background="@android:color/transparent"
            android:onClick="setting"
            android:text="setting"
            android:textColor="@color/common_action_bar_splitter"
            android:textSize="50sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="168dp"
            android:background="@android:color/transparent"
            android:text="Daily"
            android:textColor="#000000"
            android:textSize="125sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/daily"
            android:layout_width="290dp"
            android:layout_height="128dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="200dp"
            android:onClick="daily"
            android:visibility="invisible" />
    </FrameLayout>

</RelativeLayout>
